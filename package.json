{
  "name": "example-mcp-stateless",
  "version": "2.0.0-alpha.0",
  "description": "Learning-first MCP HTTP stateless boilerplate and starter CLI built on MCP TypeScript SDK v2 pre-release.",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcp-stateless-starter": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "clean": "rimraf dist .tsbuildinfo",
    "build": "npm run clean && tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "smoke": "node scripts/smoke-http.mjs",
    "ci": "npm run build && npm run check && npm run smoke",
    "start": "node dist/server.js",
    "cli": "node dist/cli.js",
    "create": "tsx src/cli.ts",
    "refresh:sdk-v2": "bash scripts/refresh-sdk-v2.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "typescript",
    "streamable-http",
    "stateless",
    "boilerplate",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/express": "file:vendor/mcp-sdk-v2/modelcontextprotocol-express-2.0.0-alpha.0.tgz",
    "@modelcontextprotocol/node": "file:vendor/mcp-sdk-v2/modelcontextprotocol-node-2.0.0-alpha.0.tgz",
    "@modelcontextprotocol/server": "file:vendor/mcp-sdk-v2/modelcontextprotocol-server-2.0.0-alpha.0.tgz",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
